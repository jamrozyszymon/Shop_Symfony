{% extends 'base.html.twig' %}


{% block body %}
    <div class="album py-5 bg-light">
        <div class="container">
            <div class ="product-list-nav">

                    {# display string if render productTop list or display name of subcategory and "sortby" select if render product List by subcategory#}
                   
                    {% if not app.request.get('categoryname')  %}
                        <div class ="product-list-nav-title">
                            <h2>Najchętniej kupowane</h2>
                        </div>
                
                    {% else %}
                        <div class ="product-list-nav-title">
                            <h2>{{ app.request.get('categoryname')}}</h2>
                        </div>

                        <div class ="product-list-nav-sort">
                            <form id="from-sort" action="" method="GET">
                                <select name="sortby" class="form-select" onchange='this.form.submit();'>
                                    <option selected>Sortowanie</option>
                                    {# <option value="rating">Najwyżej oceniane</option> #}
                                    <option value="title">Alfabetycznie</option>
                                    <option value="price_asc">Cena rosnąco</option>
                                    <option value="price_desc">Cena malejąco</option>
                                </select>
                                {% if query is defined %}
                                    <input type="hidden" name="query" value="{{query}}">
                                {% endif %}
                            </form>
                        </div>
                    {% endif %}

            </div>
            <div class="row">
                {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div align="center" class="embed-responsive embed-responsive-16by9">
                            <iframe class="" src="{{''}}" frameborder="0"
                                allowfullscreen></iframe>
                        </div>
                        <div class="card-body">
                            <h3>{{product.getName()}}</h3>
                                <a class="href_non_dec" href="{{path('home')}}">Opinie (10)</a>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">

                                    <i class="fa fa-thumbs-up">W magazynie: <small class="text-muted">{{product.getQuantity}}</small></i>&nbsp;
                                    
                                    <button data-toggle="tooltip" data-placement="top" title="Dodaj do koszyka"
                                        type="button" class="btn btn-primary"> Dodaj do koszyka
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               {% endfor %}

            </div>
        </div>
        <div>
            {{ knp_pagination_render(products)}}
        </div>
    </div>

{% endblock %}


