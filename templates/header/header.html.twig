        <div class= "header_nav">
            <ul class="nav justify-content-end">
     
               {% if app.user %}  
                    <li class="nav-item">
                        <a class="nav-link" href={{path('app_dashboard')}}>Wiadomości</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href={{path('app_dashboard')}}>Koszyk</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href={{path('app_logout')}}>Wyloguj</a>
                    </li>
                 {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href={{path('app_login')}}>Zaloguj się</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{path('app_register')}}>Zarejestruj się</a>
